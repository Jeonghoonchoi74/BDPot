<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardBackgroundColor="#FAF4C0"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <com.skydoves.expandablelayout.ExpandableLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandable_duration="200"
            app:expandable_parentLayout="@layout/item_history_parent"
            app:expandable_secondLayout="@layout/item_history_child"
            app:expandable_spinner_color="@color/black"
            app:expandable_spinner_size="24dp" />

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>