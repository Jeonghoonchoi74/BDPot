<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF4C0"
    tools:context=".ui.home.child.MypageFragment">
    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/delivery_detail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="5dp"
        android:background="#FFC107"
        android:backgroundTint="#FFC107"
        android:text="배달내역"
        app:layout_constraintEnd_toStartOf="@+id/btnLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_stack"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="358dp"
        android:layout_height="124dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="49dp"
        android:src="@drawable/baedalpot_icon"
        app:layout_constraintBottom_toTopOf="@+id/user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="94dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:text="김철중"
        android:textColor="#FF9800"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/user_email"
        app:layout_constraintStart_toStartOf="@+id/user_email"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/account_number"
        android:layout_width="146dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:text="333179700049"
        android:textColor="#FF9800"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/report_stack"
        app:layout_constraintStart_toStartOf="@+id/user_email"
        app:layout_constraintTop_toBottomOf="@+id/user_email"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:text="cj_kim@mju.ac.kr"
        android:textColor="#FF9800"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/account_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/report_stack"
        android:layout_width="66dp"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="49dp"
        android:text="신고스택"
        android:textColor="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/btnLogout"
        app:layout_constraintEnd_toEndOf="@+id/account_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_number"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="179dp"
        android:background="#FFC107"
        android:backgroundTint="#FFC107"
        android:text="로그아웃"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/delivery_detail2"
        app:layout_constraintTop_toBottomOf="@+id/report_stack"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
